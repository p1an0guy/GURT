{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "TopicMastery.json",
  "title": "TopicMastery",
  "type": "object",
  "additionalProperties": false,
  "required": ["topicId", "courseId", "masteryLevel", "dueCards"],
  "properties": {
    "topicId": {"type": "string", "minLength": 1},
    "courseId": {"type": "string", "minLength": 1},
    "masteryLevel": {"type": "number", "minimum": 0, "maximum": 1},
    "dueCards": {"type": "integer", "minimum": 0}
  }
}
